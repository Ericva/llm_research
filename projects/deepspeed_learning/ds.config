{
  "train_micro_batch_size_per_gpu": 64,
  "gradient_accumulation_steps": 1,

  "fp16": { "enabled": false },
  "bf16": { "enabled": true },

  "zero_optimization": {
    "stage": 2,
    "offload_param": { "device": "none" },
    "offload_optimizer": { "device": "none" },
    "contiguous_gradients": true,
    "overlap_comm": true
  },

  "optimizer": {
    "type": "Adam",
    "params": {
      "lr": 0.001,
      "betas": [0.8, 0.999],
      "eps": 1e-08,
      "weight_decay": 3e-07
    }
  },

  "scheduler": {
    "type": "WarmupLR",
    "params": {
      "warmup_min_lr": 0.0,
      "warmup_max_lr": 0.001,
      "warmup_num_steps": 1000
    }
  }
}